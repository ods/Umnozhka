<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.github.ods.umnozhka.GameViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        tools:context=".GameFragment">

        <RelativeLayout
            android:id="@+id/upperPart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/exerciseView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@{viewModel.exerciseText}"
                android:textSize="48sp"
                android:textStyle="bold"
                tools:text="98 Ã— 76 = ____" />
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:columnCount="@integer/num_pad_column_count"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                style="@style/NumPadButton"
                android:text="1" />

            <Button
                style="@style/NumPadButton"
                android:text="2" />

            <Button
                style="@style/NumPadButton"
                android:text="3" />

            <Button
                style="@style/NumPadButton"
                android:text="4" />

            <Button
                style="@style/NumPadButton"
                android:text="5" />

            <Button
                style="@style/NumPadButton"
                android:text="6" />

            <Button
                style="@style/NumPadButton"
                android:text="7" />

            <Button
                style="@style/NumPadButton"
                android:text="8" />

            <Button
                style="@style/NumPadButton"
                android:text="9" />

            <Button
                style="@style/NumPadButton"
                android:text="0" />
        </GridLayout>
    </LinearLayout>
</layout>